@model TravelAgencyADO.ASPCore.Models.TravelAgency.BookingViewModel

@{
    ViewData["Title"] = "Annuler la réservation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger bg-opacity-10 border-danger border-bottom-0 py-3">
                    <h5 class="card-title text-danger mb-0 text-center fw-bold">
                        Confirmation d'annulation
                    </h5>
                </div>

                <div class="card-body p-4">
                    <p class="text-muted text-center mb-4">
                        Êtes-vous certain de vouloir supprimer définitivement cette réservation ?
                    </p>

                    <div class="border rounded p-3 mb-4 bg-light">
                        <div class="mb-3">
                            <label class="small text-uppercase text-muted fw-bold d-block">Nom du Client</label>
                            <span class="fs-5">@Html.DisplayFor(model => model.ClientName)</span>
                        </div>
                        <div>
                            <label class="small text-uppercase text-muted fw-bold d-block">Date de Réservation</label>
                            <span class="fs-5">@Html.DisplayFor(model => model.BookingDate)</span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            Confirmer la suppression
                        </button>

                        <a asp-action="Index" class="btn btn-link text-decoration-none text-secondary mt-2">
                            Annuler et revenir en arrière
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
